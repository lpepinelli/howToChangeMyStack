@{
    ViewData["Title"] = "Incluir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-header row mt-3">
    <div class="content-header-left col-md-6 col-xs-12 mb-1">
        <h2 class="content-header-title">Cadastro de Livros</h2>
    </div>
</div>
<div class="content-body">
    <section id="basic-form-layouts">
        <div class="row match-height">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body collapse in">
                        <div class="card-block">
                            <form class="form">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h4 class="form-section"><i class="icon-books"></i>Livro</h4>
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <label>Título <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control required" id="title"
                                                placeholder="Título" disabled>
                                            <div class="text-danger" style="display: none">
                                                Informe o Título.
                                            </div>
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <label>Autor <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control required" id="author"
                                                placeholder="Autor" disabled>
                                            <div class="text-danger" style="display: none">
                                                Informe o Autor.
                                            </div>
                                        </div>
                                        <div class="form-group col-sm-2">
                                            <label>Gênero <span class="text-danger">*</span></label>
                                            <select class="form-control required" id="cbGenres" disabled>
                                                <!--ajax-->
                                            </select>
                                            <div class="text-danger" id="msgNome" style="display: none">
                                                Informe o Gênero.
                                            </div>
                                        </div>
                                        <div class="form-group col-sm-2">
                                            <label>Data de Publicação <span class="text-danger">*</span></label>
                                            <input id="publication" type="date" class="form-control required" disabled>
                                            <div class="text-danger" id="msgNome" style="display: none">
                                                Informe a Publicação.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-sm-4">
                                            <label>ISBN</label>
                                            <input type="text" class="form-control" id="isbn" placeholder="ISBN" disabled>
                                            <input type="hidden" id="hiddenIsbn">
                                        </div>
                                        <div class="col-sm-4 offset-sm-4">
                                            <label>Imagem</label>
                                            <input type="file" class="form-control" name="inpFile" id="inpFile" disabled>
                                            <div class="image-preview" id="imagePreview">
                                                <img src="" alt="Image Preview" class="image-preview__image">
                                                <span class="image-preview__default-text">Pré-Visualização</span>
                                            </div>
                                            <div id="remover" style="margin-top: 5px">

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-actions">
                                    <button type="button" class="btn btn-success mr-1" id="btnSalvar"
                                        data-toggle="modal">
                                        <i class="icon-floppy-o"></i> Salvar
                                    </button>
                                    <button type="button" class="btn btn-secundary" id="btnVoltar">
                                        <i class="icon-arrow-left4"></i> Voltar
                                    </button>
                                </div>

                                <!-- Modal Warning-->
                                <div id="warning" class="modal fade" style="display: none;">
                                    <div class="modal-dialog modal-confirm">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <div class="box-icon-warning">
                                                    <i class="icon-alert"></i>
                                                </div>
                                                <h4 class="modal-title">Atenção!</h4>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-hidden="true">×</button>
                                            </div>
                                            <div class="modal-body">
                                                <p id="MsgWarn">

                                                </p>
                                                <h3>Deseja salvar o registro ?</h3>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-confirm" id="btnSalvarModal"
                                                    data-toggle="modal" data-target="#confirm"
                                                    data-dismiss="modal">Salvar</button>
                                                <button type="button" class="btn btn-info"
                                                    data-dismiss="modal">Cancelar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Modal Confirm-->
                                <div id="confirm" class="modal fade" style="display: none;">
                                    <div class="modal-dialog modal-confirm">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <div class="box-icon-confirm">
                                                    <i class="icon-android-done"></i>
                                                </div>
                                                <h4 class="modal-title">Deu certo !</h4>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-hidden="true">×</button>
                                            </div>
                                            <div class="modal-body">
                                                <p>
                                                    Registro incluído com sucesso.
                                                </p>
                                            </div>
                                            <div class="modal-footer">
                                                <button id="btnOkModal" type="button" class="btn btn-confirm"
                                                    data-dismiss="modal">Ok</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/Views/Book/Create.js"></script>
}